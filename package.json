{
  "name": "hackyeah2025",
  "version": "0.0.0",
  "description": "The MVP project for the 2025 edition of HackYeah hackathon - Team 404 Found",
  "scripts": {
    "prepare": "husky",
    "start:frontend": "npm run start --workspace=packages/frontend",
    "start:backend": "dotnet run --project packages/backend/anything.csproj",
    "start:all": "npm-run-all --parallel start:frontend start:backend",
    "format:web:check": "prettier --check \"**/*.{ts,js,html,json,md,css,scss}\"",
    "format:web:fix": "prettier --write \"**/*.{ts,js,html,json,md,css,scss}\"",
    "format:dotnet:check": "dotnet format \"packages/backend/\" --check --verbosity quiet",
    "format:dotnet:fix": "dotnet format \"packages/backend/\"",
    "format:check": "npm-run-all --parallel format:web:check format:dotnet:check",
    "format:fix": "npm-run-all --parallel format:web:fix format:dotnet:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArkadiuszPabian/HackYeah2025.git"
  },
  "author": {
    "name": "404 Found Team",
    "email": "404found.hackyeah2025@gmail.com",
    "url": "https://github.com/ArkadiuszPabian/HackYeah2025.git"
  },
  "contributors": [
    {
      "name": "Mateusz",
      "url": "https://github.com/Mateuszl28"
