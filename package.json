    },
    {
      "name": "Pau",
      "url": "https://github.com/username-6"
    }
  ],
  "bugs": {
    "url": "https://github.com/ArkadiuszPabian/HackYeah2025/issues"
  },
  "homepage": "https://github.com/ArkadiuszPabian/HackYeah2025",
  "keywords": [
    "hackyeah",
    "hackathon",
    "404found",
    "mvp",
    "angular",
    "aspnetcore"
  ],
  "workspaces": [
    "packages/frontend"
  ],
  "license": "MIT",
  "private": true,
  "lint-staged": {
    "packages/frontend/**/*.{ts,js,html,css,scss,json,md}": [
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "packages/backend/**/*.cs": [
      "dotnet format --include \"packages/backend/**/*.cs\""
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
